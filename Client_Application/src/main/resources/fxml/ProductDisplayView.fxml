<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<HBox fx:id="mainDisplayProductsView" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">
    <HBox fx:id="internalMainBox">
        <VBox fx:id="filtersMenuBox" prefWidth="150" alignment="TOP_CENTER">
            <padding>
                <Insets top="10"/>
            </padding>
            <Button fx:id="doFilterButton" text="FILTER" onAction="#doFilter"/>
        </VBox>

        <ScrollPane fx:id="productDisplay">
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            <TilePane fx:id="tilePaneWithProducts" hgap="20" vgap="20">
            </TilePane>
        </ScrollPane>
    </HBox>
</HBox>
